
  <view class="first_page">
    <view class="banner">
      <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" indicator-color="#fff" circular="true" indicator-active-color="#aaa" duration="{{duration}}">
        <block  wx:for="{{imgUrls}}">
          <swiper-item>
            <image src="{{item}}" class="slide-image" width="355" height="150"/>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <view class="ceil_box">
      <view class="ceil"  wx:for="{{ceilList}}" wx:key="{{item.id}}" bindtap="toJump" data-wpytojump-a="{{item}}">
        <image class="img" src="{{item.icon}}"/>
        <text class="txt">{{item.name}}</text>
      </view>
    </view>
  </view>